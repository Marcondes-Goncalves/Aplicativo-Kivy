
<ListarVendedoresPage>
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"
                
        # ScrollView é um elemento que permite rolar a tela
        # Lista de vendedores
        ScrollView:
            pos_hint: {"right": 1, "top": 0.9}
            size_hint: 1, 0.78
            GridLayout:
                cols: 1 # colunas
                # não precizamos passar a qtd de linhas, pois elas serão adicionadas automaticamente, na medida em que adicionamos itens na lista
                id: lista_vendedores
                # os 4 parâmetros abaixo sempre terão que ser passados quando criamos um ScrollView
                size_hint_y: None
                spacing: 2, 2
                height: self.minimum_height
                row_default_height: "90dp" # 90dp é o tamanho dos banners dentro do ScrollView
                row_force_default: True
            
        # Botão voltar para Home Page
        FloatLayout:
            pos_hint: {"right": 1, "top": 0.12}
            size_hint: 1, 0.12

            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#006D7E")
                Rectangle:
                    size:self.size
                    pos: self.pos

            ImageButton:
                pos_hint: {"right": 0.2, "top": 0.9}
                size_hint: 0.2, 0.8
                source: "icones/voltar.png"
                on_release: app.mudarTela("homepage")