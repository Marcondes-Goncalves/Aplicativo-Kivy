
<AdicionarVendasPage>
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"

        # Seleciona cliente
        Label:
            pos_hint: {"right": 1, "top": 1}
            size_hint: 1, 0.05
            text: "Selecione o cliente"

        # ScrollView é um elemento que permite rolar a tela
        # Lista de Vendas
        ScrollView:
            pos_hint: {"right": 1, "top": 0.95}
            size_hint: 1, 0.15
            GridLayout:
                rows: 1 # colunas
                # não precizamos passar a qtd de linhas, pois elas serão adicionadas automaticamente, na medida em que adicionamos itens na lista
                id: lista_clientes
                # os 4 parâmetros abaixo sempre terão que ser passados quando criamos um ScrollView
                size_hint_x: None
                width: self.minimum_width
                column_default_width: "100dp" # 90dp é o tamanho dos banners dentro do ScrollView
                column_force_default: True

        # Selecione o produto
        Label:
            pos_hint: {"right": 1, "top": 0.75}
            size_hint: 1, 0.05
            text: "Selecione o produto"

        # ScrollView é um elemento que permite rolar a tela
        # Lista de Vendas
        ScrollView:
            pos_hint: {"right": 1, "top": 0.7}
            size_hint: 1, 0.15
            GridLayout:
                rows: 1 # colunas
                # não precizamos passar a qtd de linhas, pois elas serão adicionadas automaticamente, na medida em que adicionamos itens na lista
                id: lista_produtos
                # os 4 parâmetros abaixo sempre terão que ser passados quando criamos um ScrollView
                size_hint_x: None
                width: self.minimum_width
                column_default_width: "100dp" # 90dp é o tamanho dos banners dentro do ScrollView
                column_force_default: True

        Label:
            id: label_data
            pos_hint: {"right": 1, "top": 0.5}
            size_hint: 1, 0.05
            bold: True
            text: "Data: 30/03/2024"

        # Seleciona a unidade
        GridLayout:
            rows: 1
            pos_hint: {"right": 0.9, "top": 0.45}
            size_hint: 0.8, 0.1
            Label:
                text: "kg"
                id: unidades_kg
            Label:
                text: "unidades"
                id: unidades_unidades
            Label:
                text: "litros"
                id: unidades_litros

        # Botôes
        LabelButton:
            # o .before só é necessário caso a imagem tampe o texto!!
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos # quando o botão é apertado a imagem é alterada. 
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"

            on_release: app.mudarTela("homepage")
            text: "Cancelar"
            pos_hint: {"right": 0.45, "top": 0.2}
            size_hint: 0.4, 0.2

        LabelButton:
            # o .before só é necessário caso a imagem tampe o texto!!
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"

            # Pegando o email e a senha  e passando para a nossa função
            on_release: print("Adicionar venda")
            text: "Adicoinar venda"
            pos_hint: {"right": 0.95, "top": 0.2}
            size_hint: 0.4, 0.2

        # preço total
        GridLayout:
            rows: 1
            pos_hint: {"right": 0.9, "top": 0.355}
            size_hint: 0.8, 0.075
            Label:
                text: "Preço total (R$)"
            TextInput:
                id: preco_total
                hint_text: "Digite apenas números"

        # Quantidade
        GridLayout:
            rows: 1
            pos_hint: {"right": 0.9, "top": 0.275}
            size_hint: 0.8, 0.075
            Label:
                text: "Quantidade total"
            TextInput:
                id: preco_total
                hint_text: "0"


        